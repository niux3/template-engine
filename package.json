{
  "name": "@niuxe/template-engine",
  "version": "1.3.0",
  "description": "Ultra-lightweight JavaScript template engine with automatic HTML escaping, intelligent caching, and optional plugins (~950 bytes gzipped)",
  "type": "module",
  "main": "./dist/template-engine.js",
  "module": "./dist/template-engine.js",
  "exports": {
    ".": {
      "import": "./dist/template-engine.js",
      "default": "./dist/template-engine.js"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "default": "./dist/plugins/index.js"
    },
    "./plugins/partials": {
      "import": "./dist/plugins/partials.js",
      "default": "./dist/plugins/partials.js"
    },
    "./plugins/layout": {
      "import": "./dist/plugins/layout.js",
      "default": "./dist/plugins/layout.js"
    },
    "./plugins/experiments/partials_core": {
      "import": "./dist/plugins/experiments/partials_core.js",
      "default": "./dist/plugins/experiments/partials_core.js"
    },
    "./plugins/experiments/partials_dynamic": {
      "import": "./dist/plugins/experiments/partials_dynamic.js",
      "default": "./dist/plugins/experiments/partials_dynamic.js"
    },
    "./plugins/experiments/partials_params": {
      "import": "./dist/plugins/experiments/partials_params.js",
      "default": "./dist/plugins/experiments/partials_params.js"
    },
    "./plugins/helpers": {
      "import": "./dist/plugins/helpers.js",
      "default": "./dist/plugins/helpers.js"
    },
    "./plugins/strict": {
      "import": "./dist/plugins/strict.js",
      "default": "./dist/plugins/strict.js"
    },
    "./plugins/i18n": {
      "import": "./dist/plugins/i18n.js",
      "default": "./dist/plugins/i18n.js"
    },
    "./plugins/async": {
      "import": "./dist/plugins/async.js",
      "default": "./dist/plugins/async.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "build": "vite build && node scripts/minify.js",
    "build:vite": "vite build",
    "prepublishOnly": "npm run build && npm test",
    "dev": "vite",
    "preview": "vite preview",
    "postinstall": "node -e \"console.log('\\x1b[35m%s\\x1b[0m', '‚≠ê Thank you for using TemplateEngine! If you like it, consider starring it on GitHub: https://github.com/niux3/template-engine')\""
  },
  "keywords": [
    "template",
    "template-engine",
    "templating",
    "lightweight",
    "tiny",
    "zero-dependency",
    "edge",
    "performance",
    "html",
    "rendering",
    "escaping",
    "plugin",
    "modular",
    "cache",
    "partials",
    "helpers",
    "layouts",
    "inheritance",
    "i18n",
    "strict-mode",
    "async"
  ],
  "author": "niux3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niux3/template-engine.git"
  },
  "bugs": {
    "url": "https://github.com/niux3/template-engine/issues"
  },
  "homepage": "https://github.com/niux3/template-engine#readme",
  "devDependencies": {
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "4.0.17",
    "esbuild": "^0.27.2",
    "vite": "^7.2.4",
    "vitest": "^4.0.17"
  }
}